<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <p><%= product.name %></p>
  </td>
  <td>
    <p><%= product.description %></p>
  </td>
  <td>
    <p><%= order.quantity %></p>
  </td>
  <td>
    <p><%= humanized_money_with_symbol product.price  %></p>
  </td>
  <td>
    <p><%= humanized_money_with_symbol (product.price * order.quantity) %></p>
  </td>
</tr>
